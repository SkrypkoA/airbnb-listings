<!DOCTYPE html>
<html>
  <head>
    <title>AirbnbListings</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'application', media: 'all' %>
    <%= javascript_pack_tag 'application' %>
  </head>

  <body class="<%="controller__#{controller_name} action__#{action_name}"%>">
    <nav class="navbar navbar-expand-lg navbar-light bg-light">
      <%= link_to 'Airbnb Listings', root_path, class: 'navbar-brand' %>
      <div class="navbar-collapse flex-row-reverse">
        <ul class="nav navbar-nav">
          <% if user_signed_in? %>
            <li class="nav-item m-1"> <%= link_to 'Sign Out', destroy_user_session_path, method: :delete, class: 'btn btn-primary' %> </li>
          <% else %>
            <li class="nav-item m-1"> <%= link_to 'Sign in', new_user_session_path, class: 'btn btn-primary' %> </li>
            <li class="nav-item m-1"> <%= link_to 'Sign Up', new_user_registration_path, class: 'btn btn-primary' %> </li>
          <% end %>
        </ul>
      </div>
    </nav>
    <%= render 'layouts/flash' %>
    <section class="container main_container">
      <%= yield %>
    </section>
  </body>
</html>
